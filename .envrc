# shellcheck shell=bash
# vim: ft=bash

# Nix-direnv flake integration
watch_file flake.nix
watch_file flake.lock
use flake

# Add local project binaries to PATH (eslint, prettier, vitest, tsx, etc.)
PATH_add node_modules/.bin

# Load environment variables from env/.env first (if present)
if [ -f env/.env ]; then
  set -a
  . env/.env
  set +a
fi

# Fallback: load root .env if present
if [ -f .env ]; then
  set -a
  . .env
  set +a
fi
